+#include <stdio.h>
+#include <stdlib.h>
+#include <stdint.h>
+#include <stdarg.h>
+
+#include "geos_c.h"
+
+
+int LLVMFuzzerTestOneInput(const uint8_t *Data, size_t Size) {
+    //faster to copy than to check for final zero
+    uint8_t * zero = malloc(Size+1);
+    memcpy(zero, Data, Size);
+    zero[Size] = 0;
+
+    GEOSGeometry *gt = GEOSGeomFromWKT(zero);
+    GEOSGeometry *g1 = GEOSGeomFromWKB_buf(Data, Size);
+
+    /* WKT output */
+    GEOSGeomToWKT(gt);
+    GEOSGeomToWKT(g1);
+
+    GEOSGeom_destroy(gt);
+    GEOSGeom_destroy(g1);
+    free(zero);
+    return 0;
+}
